---
const {frontmatter} = Astro.props;
import Layout from './Layout.astro';
---
<Layout title={frontmatter.title}>
  <div class="flex flex-col justify-center pt-8">
    <div class="mx-auto">
      <article class="prose lg:prose-xl">
        <h1>{frontmatter.title}</h1>
        <slot />
      </article>
    </div>
  </div>
</Layout>
